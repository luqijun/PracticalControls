<UserControl x:Class="PracticalControls.Demo.Views.ToolTipSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticalControls.Demo.Views"
             xmlns:controls="clr-namespace:PracticalControls.Controls;assembly=PracticalControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <controls:ToolTipSlider AutoToolTipPlacement="TopLeft" AutoToolTipContent="{Binding Value, RelativeSource={RelativeSource Mode=Self}}"/>
    </Grid>
</UserControl>
