<UserControl x:Class="PracticalControls.Demo.Views.SplintRing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticalControls.Demo.Views"
             xmlns:controls="clr-namespace:PracticalControls.Controls;assembly=PracticalControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <controls:SplitRing TextsSource="{Binding TextNums}" SplitCount="6" FontSize="16" Angle="90"/>
        <controls:SplitRing Grid.Column="1" TextsSource="{Binding TextNums}" SplitCount="20" FontSize="16"  IsRandomColor="True"/>
    </Grid>
</UserControl>
