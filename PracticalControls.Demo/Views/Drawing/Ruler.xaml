<UserControl x:Class="PracticalControls.Demo.Views.Ruler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticalControls.Demo.Views"
             xmlns:controls="controls"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:RulerViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="RedLine" TargetType="Line" BasedOn="{StaticResource PracticalControls.Styles.Line.MouseOver}">
            <Setter Property="Stroke" Value="Red" />
        </Style>

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="AddLine" Command="{Binding AddCommand}" />
        </StackPanel>
        <Ruler x:Name="ruler" Grid.Row="1" LinesSource="{Binding LineInfos}" AutoResize="True" Stroke="Blue"/>
    </Grid>
</UserControl>
