<UserControl x:Class="PracticalControls.Demo.Views.RichTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PracticalControls.Demo.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate x:Key="itemTemp">
            <TextBlock Text="{Binding Text}"/>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <TextBox Text="Both RichTextBox and TextBox allow users to edit text"/>
            <TextBox Text="Both RichTextBox and TextBox allow users to edit text"/>
            <TextBox Text="Both RichTextBox and TextBox allow users to edit text"/>
            <TextBox Text="Both RichTextBox and TextBox allow users to edit text"/>
            <ListBox ItemsSource="{Binding LstText}" ItemTemplate="{StaticResource itemTemp}"/>

            <TextBlock Text="{Binding }"/>
        </StackPanel>
        
        
    </Grid>
</UserControl>
