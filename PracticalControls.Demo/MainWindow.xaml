<Window x:Class="PracticalControls.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalControls.Demo"
        xmlns:dg="clr-namespace:PracticalControls.Demo.DataGrid"
        xmlns:tv="clr-namespace:PracticalControls.Demo.TreeView"
        mc:Ignorable="d"
        Title="PracticalControls" Height="600" Width="1000">
    <Grid>
        <TabControl>
            <TabItem Header="DataGrid">
                <TabControl>
                    <TabItem Header="ExcelDataGrid">
                        <dg:ExcelDataGrid/>
                    </TabItem>
                    <TabItem Header="TreeDataGrid">
                        <dg:TreeDataGrid/>
                    </TabItem>
                </TabControl>
            </TabItem>
            <TabItem Header="TreeView">
                <tv:DraggableTreeView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
